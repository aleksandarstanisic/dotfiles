* {
  
  red:       #d32f2f;
  grey:      #54565f;
  darkgrey:  #121212;
  white:     #f2f2f2;
  blue:      #1976d2;
  black:     #000000;

  background-color: @darkgrey;
  border-color: @grey;
  text-color: @white;
  spacing: 0;
}

#window {
  border-radius: 6;
}

#inputbar {
  border: 0 0 1 0;
}

#prompt {
  padding: 8;
  border: 0 1 0 0;
}

#entry {
  padding: 10;
}

#listview {
  scrollbar: true;
}

#element {
  padding: 8;
}

#element selected {
  background-color: @blue;
}

#element active {
  text-color: @blue;
}

#element urgent {
  background-color: @red;
}
#scrollbar {
  handle-color: @grey;
}
