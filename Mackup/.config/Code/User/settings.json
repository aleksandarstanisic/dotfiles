{
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  // "debug.node.autoAttach": "on",
  "dart.lineLength": 100,
  "editor.fontFamily": "'Fira Code', 'LigaSrc Pro', 'Source Code Pro', 'Cascadia Code', 'Courier New'",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.formatOnSave": true,
  "editor.lineHeight": 20,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": false,
  "editor.renderLineHighlight": "gutter",
  "editor.suggestSelection": "first",
  "editor.tokenColorCustomizations": {
    "[One Dark Pro]": {
      "keywords": "#B294BB" // Change bright pink color
    }
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "explorer.openEditors.visible": 0,
  "files.trimTrailingWhitespace": true,
  // This fixes gnome freeze
  "files.exclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
    // "dist/**": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "git.autofetch": true,
  "indentRainbow.colors": ["#00000011", "#44444411", "#88888811", "#BBBBBB11"],
  "javascript.suggest.completeFunctionCalls": true,
  /* On Linux key remaping does not work without this */
  "keyboard.dispatch": "keyCode",
  "telemetry.enableTelemetry": false,
  "terminal.integrated.fontSize": 15,
  "vim.debug.silent": true,
  "vim.disableExtension": false,
  "vim.handleKeys": { "<C-d>": false },
  "vim.useCtrlKeys": false,
  "vsintellicode.modify.editor.suggestSelection": "choseToUpdateConfiguration",
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "native",
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "GitHub Dark",
  "workbench.colorCustomizations": {
    "[One Dark Pro]": {
      "tab.activeBackground": "#282c34",
      "activityBar.background": "#282c34",
      "sideBar.background": "#282c34",
      "statusBar.background": "#282c34",
      "editorGroupHeader.tabsBackground": "#282c34",
      "tab.inactiveBackground": "#282c34",
      "tab.activeBorder": "#aaaaaa",
      "tab.activeForeground": "#fefefe",
      "sideBarSectionHeader.background": "#22252c", // 15% darker than main color
      "sideBar.border": "#222222"
    },
    "[Tomorrow Night Eighties]": {
      "tab.activeBackground": "#2D2D2D",
      "activityBar.background": "#2D2D2D",
      "sideBar.background": "#2D2D2D",
      "statusBar.background": "#2D2D2D",
      "editorGroupHeader.tabsBackground": "#2D2D2D",
      // "editorGroupHeader.tabsBorder": "#040",
      "tab.inactiveBackground": "#2D2D2D",
      "tab.activeBorder": "#ccc",
      "tab.activeForeground": "#fefefe",
      "sideBar.border": "#272727",
      "statusBar.border": "#272727"
    }
  },
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.iconTheme": "vscode-icons",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "workbench.tree.renderIndentGuides": "onHover",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "debug.javascript.usePreview": true,
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true
}
