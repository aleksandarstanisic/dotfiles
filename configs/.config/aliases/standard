#/bin/sh

# Use neovim
alias v='nvim'

# Exit shortcuts
alias e='exit'
alias q='exit'
alias :q='exit'
alias :wq='exit'

# Clear screen
alias c='clear'

# Enter projects folder
alias p='cd ~/Projects'

# Show all files
alias la='ls -a'

# Copy recursively by default
alias cp='cp -R'

# Go to home folder and clear screen
alias cdc='cd ~ && clear'

# Docker compose
alias dcu='docker-compose up'
alias dcd='docker-compose down'

# Kill shortcut
alias kl='killall -9'

# apt shortcuts
alias sa='sudo apt'
alias au='sudo apt update'
alias auu='sudo apt update && sudo apt upgrade -y'
alias ai='sudo apt install'

# Check weather in terminal for current IP
alias wt='curl wttr.in'

# Attach to tmux session
alias ta='tmux attach -t'

# Rerun previous command with sudo
alias again='sudo $(fc -ln -1)'

# I do not like zimfw aliases for git.
# Using my own.
alias ga='git add'
alias gaa='git add --all'
alias gac='git add --all && git commit'
alias gc='git commit'
alias gd='git diff'
alias gst='git status'
alias gp='git push'

# Alias to go up in folders
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../..'
